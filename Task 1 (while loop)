#include <iostream>
using namespace std;

int main() {
    int rows = 7; // Number of rows for the triangle
    int i = 1  ;   /*    *
                         **
                         ***
                         ****
           */              

    while (i <= rows) {
        int j = 1;
        while (j <= i) {
            cout << "* ";
            j++;
        }
        cout << endl;
        i++;
    }

    return 0;
}
